import java.util.*;
public class Dayss {
	public static void main(String[] args)
	
	{
		Scanner scn = new Scanner(System.in);
        int time=scn.nextInt();
        scn.nextLine();
        
        while(time>0)
        {
            String str= scn.nextLine();
            StringBuilder evnStr= new StringBuilder();
            StringBuilder oddStr= new StringBuilder();
            char arr []= str.toCharArray();
            for(int i=0;i<str.length();i++)
            { 
            	if(i%2==0)
            {
                evnStr.append(arr[i]);
            }
            else
            {
                oddStr.append(arr[i]);
            }
           
                
            }
            evnStr.append(" ");
            evnStr.append(oddStr);
            System.out.println(evnStr);
            time--;
        }
        
    }
	

}
